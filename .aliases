# multi-screen {{{
_prerandr () { xrandr --newmode "1360x768_60.00"  84.72  1360 1424 1568 1776  768  769  772  795  -HSync +Vsync && xrandr --addmode HDMI1 1360x768_60.00 && $1 || $1 ; }
_qrandr () { xrandr --output HDMI1 --mode 1360x768_60.00 --pos 1366x0 --rotate normal --output LVDS1 --primary --preferred --mode 1366x768 --pos 0x0 --rotate normal ; }

alias arandr='_prerandr arandr'
alias qrandr='_prerandr _qrandr'

