alias xrandr1600x1200='xrandr --newmode "1600x1200_60.00" 160.96 1600 1704 1880 2160  1200 1201 1204 1242 -HSync +Vsync && xrandr --addmode HDMI-1-1 1600x1200_60.00'
alias xrandr1360x1024='xrandr --newmode "1360x1024_60.00" 116.01 1360 1448 1592 1824  1024 1025 1028 1060 -HSync +Vsync && xrandr --addmode HDMI-1-1 1360x1024_60.00'
alias  xrandr1360x768='xrandr --newmode "1360x768_60.00"  84.72  1360 1424 1568 1776  768  769  772  795  -HSync +Vsync && xrandr --addmode HDMI-1-1 1360x768_60.00'
alias arandr='xrandr1080x1920 && xrandr1600x1200 && xrandr1360x1024 && xrandr1360x768 && arandr'
alias qrandr='xrandr --output LVDS-1-1 --primary --preferred --mode 1366x768 --pos 0x768 --rotate normal --output DP-1-1 --off --output VGA-1-1 --off --output HDMI-1-1 --mode 1360x768_60.00 --pos 0x0 --rotate normal'
