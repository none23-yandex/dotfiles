# Aliases {{{
# listing files {{{
alias la='ls -A --color=tty'
alias ll='ls -lh --color=tty'
alias ls='ls --color=tty'
# }}}
# package mgmt {{{
alias p='sudo pacman'
alias P='sudo pacman -Syu'
alias y='yaourt'
alias Y='yaourt -Syua'
alias yor='sudo pacman -R $(pacman -Qtdq)'
# }}}
# sshuttle {{{
alias sshide='sshuttle -r 52.1.52.92 0/0 --dns -D'
alias sshive='sshuttle -r 52.1.52.92 0/0 --dns -v' 
alias sshpotify='sshuttle -r 52.1.52.92 78.31.8.0/21 216.58.217.142/24 193.182.8.0/21 95.215.60.0/22 --dns -D'
# }}}
# touchpad switch {{{
alias toff='xinput --disable SynPS/2\ Synaptics\ TouchPad'
alias tonn='xinput --enable SynPS/2\ Synaptics\ TouchPad'
alias ton='tonn && (sleep 20 && toff) &'
# }}}
# check ping {{{
alias pn='ping -c 10 -i .2 8.8.8.8'
# }}}
# improved dd {{{
alias dd='sudo dcfldd'
# }}}
# remove trash files {{{
alias garb='sudo rm -rv /home/n/.adobe /home/n/.macromedia /home/n/.local/share/Trash /home/n/.local/share/xorg /home/n/gksu.lock'
# }}}
# msfconsole {{{
alias msf='msfconsole --quiet -x \"db_connect n@msf\"'
# }}}
# git {{{
# add, commit, and push dotfiles
alias dot='(cd /home/n/none23/dotfiles && (git ls-files --modified -z | xargs -0 git add ) && git commit -m "updated" && git push origin master)'
# git removal tool
alias bfg='java -jar /home/n/builds/bfg.jar'
# }}}
# wireless monitor mode switch {{{
alias wmon='sudo ifconfig wlp7s0 down && sudo iwconfig wlp7s0 mode monitor && sudo ifconfig wlp7s0 up'
# }}}
# screen blanking {{{
alias wkp='xset dpms force on'
alias gdrk='xset dpms force off'
# }}}
# send sms {{{
alias sendsms='python /home/n/none23/sendsms/sendsms.py'
# }}}
# ranger fm {{{
alias rr='ranger .'
# }}}
# }}}

# Global Aliases {{{
alias -g vim='nvim'
alias -g gvim='konsole -s nvim'
alias -g ...='../..'
alias -g ....='../../..'
alias -g .....='../../../..'
# }}}

# File Extensions {{{
    alias -s html=firefox
    alias -s conf=vim
    alias -s lua=vim
    alias -s xml=vim
    alias -s txt=vim
    alias -s xml=vim
    alias -s css=vim
    alias -s ini=vim
    alias -s pdf=zathura
