# mount / unmount {{{
mount ()  { if [ $# -ne 2 ]; then echo   "Two arguments expected: received $#"; else ( mount  "$1" "$2" || sudo mount  "$1" "$2" ); fi ; }
umount () { if [ $# -ne 1 ]; then echo "Single argument expected: received $#"; else ( umount "$1"      || sudo umount "$1"      ); fi ; }
