[[ -a ~/.config/htop ]] && mv ~/.config/htop{,.old}
ln -s $DOTFILES_PATH/.config/htop ~/.config/htop

[[ -a ~/.config/konsolerc ]] && mv ~/.config/konsolerc{,.old}
ln -s $DOTFILES_PATH/.config/konsolerc ~/.config/konsolerc

[[ -a ~/.config/libfm ]] && mv ~/.config/libfm{,.old}
ln -s $DOTFILES_PATH/.config/libfm ~/.config/libfm

[[ -a ~/.config/libreoffice ]] && mv ~/.config/libreoffice{,.old}
ln -s $DOTFILES_PATH/.config/libreoffice ~/.config/libreoffice

[[ -a ~/.config/lxterminal ]] && mv ~/.config/lxterminal{,.old}
ln -s $DOTFILES_PATH/.config/lxterminal ~/.config/lxterminal

[[ -a ~/.config/mimeapps.list ]] && mv ~/.config/mimeapps.list{,.old}
ln -s $DOTFILES_PATH/.config/mimeapps.list ~/.config/mimeapps.list

[[ -a ~/.config/qt5ct ]] && mv ~/.config/qt5ct{,.old}
ln -s $DOTFILES_PATH/.config/qt5ct ~/.config/qt5ct

[[ -a ~/.config/ranger ]] && mv ~/.config/ranger{,.old}
ln -s $DOTFILES_PATH/.config/ranger ~/.config/ranger

[[ -a ~/.config/Thunar ]] && mv ~/.config/Thunar{,.old}
ln -s $DOTFILES_PATH/.config/Thunar ~/.config/Thunar

[[ -a ~/.config/transmission ]] && mv ~/.config/transmission{,.old}
ln -s $DOTFILES_PATH/.config/transmission ~/.config/transmission

