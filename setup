ln -s $DOTFILES_PATH/.config/user-dirs.locale ~/.config/user-dirs.locale

[[ -a ~/.config/vlc ]] && mv ~/.config/vlc{,.old}
ln -s $DOTFILES_PATH/.config/vlc ~/.config/vlc

[[ -a ~/.config/xarchiver ]] && mv ~/.config/xarchiver{,.old}
ln -s $DOTFILES_PATH/.config/xarchiver ~/.config/xarchiver

[[ -a ~/.config/xfce4 ]] && mv ~/.config/xfce4{,.old}
ln -s $DOTFILES_PATH/.config/xfce4 ~/.config/xfce4

[[ -a ~/.config/pycharm_settings ]] && mv ~/.config/pycharm_settings{,.old}
ln -s $DOTFILES_PATH/.config/pycharm_settings ~/.config/pycharm_settings

# /misc }}}
