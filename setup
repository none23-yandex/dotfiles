ln -s $DOTFILES_PATH/.ipython ~/.ipython

[[ -a ~/.tmux.conf ]] && mv ~/.tmux.conf{,.old}
ln -s $DOTFILES_PATH/.tmux.conf ~/.tmux.conf

[[ -a ~/.local/share/konsole ]] && mv ~/.local/share/konsole{,.old}
ln -s $DOTFILES_PATH/.local/share/konsole ~/.local/share/konsole

[[ -a ~/.config/compton.conf ]] && mv ~/.config/compton.conf{,.old}
ln -s $DOTFILES_PATH/.config/compton.conf ~/.config/compton.conf

[[ -a ~/.config/cvim ]] && mv ~/.config/cvim{,.old}
ln -s $DOTFILES_PATH/.config/cvim ~/.config/cvim

[[ -a ~/.config/cvim ]] && mv ~/.config/cvim{,.old}
ln -s $DOTFILES_PATH/.config/cvim ~/.config/cvim

