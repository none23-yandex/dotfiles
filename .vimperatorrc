" Settings {{{

" safe browsing
set noloadplugins

" tab completion
set complete=bslSfh
set maxitems=20

" history size
set history=10000
set messages=10000

" hit enter to follow selected hint
set followhints=1

" don't autofocus input elements on open
set focuscontent
" }}}

" GUI {{{

" title
set titlestring=

" load userstyles
source ~/.vimperator/styles/styles.js
styledisable -name orangeblack
styledisable -name inverted

" status bar contents
set status="ssl,location,bookmark,tabcount,position"

" open links in a new tab
set popups=tab

" no tab numbers
set notabnumbers


" show tabbar only
set gui=none,tabs

" colorscheme
colorscheme nwsome
" }}}

" Mappings {{{

" move faster
nnoremap j 9j
nnoremap k 9k

" colon - semicolon
nnoremap ; :

" next/previous tab with K/J
nnoremap K :tabnext<CR>
nnoremap J :tabNext<CR>

" toggle inverted color
nmap <F2> :styletoggle -name inverted<CR>
" nmap <leader>b :styletoggle -name orangeblack<CR>    -- NOT READY YET

" gogle translate shortcut
nmap <F4> :winopen https://translate.google.com<CR>
" }}}

